<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Works</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="shortcut icon" href="./assets/favicon.ico" type="image/x-icon" />
    <link rel="preload" href="./styles/works.css" as="style" />
    <link rel="stylesheet" href="./styles/works.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header id="top-container" role="navigation">
      <%- include(process.cwd() + '/app/templates/navigation'); %>
    </header>
    <main id="main-container">
      <section id="works-container">
        <% works.reverse().map((work) => { %>
        <a href="./work/<%= work.id %>.html">
          <div class="works-content">
            <img src="<%= work.thumbnail %>" />
            <h1><%= work.title %></h1>
          </div>
        </a>
        <% }) %>
      </section>
    </main>
  </body>
</html>
